            <if test="sex!=null">sex=#{sex},</if>
            <if test="projNo!=null">projNo=#{projNo},</if>
            <if test="projName!=null">projName=#{projName},</if>
            <if test="area!=null">area=#{area},</if>
            <if test="position!=null">position=#{position},</if>
