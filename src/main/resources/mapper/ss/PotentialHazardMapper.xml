            <if test="creatorName!=null and !&quot;&quot;.equals(creatorName.trim())">AND creatorName=#{creatorName}</if>
            <if test="fromDate!=null">AND date &gt;= #{fromDate}</if>
            <if test="toDate!=null">AND date &lt; DATEADD(day,1,#{toDate})</if>
        </where>
        ORDER BY date DESC
