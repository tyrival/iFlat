<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Sm.SbTargetCostSplit">

    <insert id="insert" parameterType="com.iflat.sm.bean.SbTargetCostSplit">
        INSERT INTO SmSbTargetCostSplit
        VALUES (#{id},#{type},#{projNo},#{projName},#{deptName},#{costAccount},#{amount},#{creatorAcc},#{creatorName},#{createTime},#{fixed},#{fixedTime})
    </insert>

    <insert id="insertBatch" parameterType="java.util.List">
        INSERT INTO SmSbTargetCostSplit
        <foreach collection="list" item="item" index="index" separator="UNION ALL">
            SELECT #{item.id},#{item.type},#{item.projNo},#{item.projName},#{item.deptName},#{item.costAccount},#{item.amount},#{item.creatorAcc},#{item.creatorName},#{item.createTime},#{item.fixed},#{item.fixedTime}
        </foreach>
    </insert>

    <update id="update" parameterType="com.iflat.sm.bean.SbTargetCostSplit">
        UPDATE SmSbTargetCostSplit
        <set>
            <if test="type!=null">type=#{type},</if>
            <if test="projNo!=null">projNo=#{projNo},</if>
            <if test="projName!=null">projName=#{projName},</if>
            <if test="deptName!=null">deptName=#{deptName},</if>
            <if test="costAccount!=null">costAccount=#{costAccount},</if>
            <if test="amount!=null">amount=#{amount},</if>
            <if test="fixed!=null">fixed=#{fixed},</if>
            <if test="fixedTime!=null">fixedTime=#{fixedTime}</if>
        </set>
        WHERE id=#{id}
    </update>

    <delete id="delete" parameterType="com.iflat.sm.bean.SbTargetCostSplit">
        DELETE SmSbTargetCostSplit
        WHERE id=#{id}
    </delete>

    <select id="list" parameterType="com.iflat.sm.bean.SbTargetCostSplit" resultMap="SmSbTargetCostSplitResult">
        SELECT id,type,projNo,projName,deptName,costAccount,amount,creatorAcc,creatorName,createTime,fixed,fixedTime
        FROM SmSbTargetCostSplit
        <where>
            <if test="id!=null">id=#{id}</if>
            <if test="type!=null">AND type=#{type}</if>
            <if test="projNo!=null">AND projNo=#{projNo}</if>
            <if test="projName!=null">AND projName=#{projName}</if>
            <if test="deptName!=null">AND deptName=#{deptName}</if>
            <if test="costAccount!=null">AND costAccount=#{costAccount}</if>
            <if test="creatorAcc!=null">AND creatorAcc=#{creatorAcc}</if>
            <if test="fixed!=null">AND fixed=#{fixed}</if>
        </where>
        ORDER BY projNo,deptName,type,costAccount,createTime,id
    </select>

    <resultMap type="com.iflat.sm.bean.SbTargetCostSplit" id="SmSbTargetCostSplitResult">
        <result property="id" column="id" jdbcType="CHAR"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
        <result property="projNo" column="projNo" jdbcType="VARCHAR"/>
        <result property="projName" column="projName" jdbcType="VARCHAR"/>
        <result property="deptName" column="deptName" jdbcType="VARCHAR"/>
        <result property="costAccount" column="costAccount" jdbcType="VARCHAR"/>
        <result property="amount" column="amount" jdbcType="DOUBLE"/>
        <result property="creatorAcc" column="creatorAcc" jdbcType="VARCHAR"/>
        <result property="creatorName" column="creatorName" jdbcType="VARCHAR"/>
        <result property="createTime" column="createTime" jdbcType="DATE"/>
        <result property="fixed" column="fixed" jdbcType="BIT"/>
        <result property="fixedTime" column="fixedTime" jdbcType="DATE"/>
    </resultMap>
</mapper>